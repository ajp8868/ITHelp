@model ITHelp_Models.TicketFilter
<br/>
@using (Html.BeginForm("Tickets", "Admin", FormMethod.Post, new { @class = "filterForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group horiz">
            @Html.LabelFor(model => model.completed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.completed, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.completed, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group horiz">
            @Html.LabelFor(model => model.awaiting_approval, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.awaiting_approval, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.awaiting_approval, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group horiz">
            @Html.LabelFor(model => model.day_limit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.day_limit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.day_limit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group horiz">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Apply" class="btn btn-default" />
            </div>
        </div>
    </div>
}
