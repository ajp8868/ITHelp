<br/>

    <div class="form-horizontal">
        <div class="form-group horiz">
            @Html.Label("Search", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group horiz">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" onclick="location.href='knowledge?search='+ document.getElementById('search').value;" />
            </div>
        </div>
    </div>
