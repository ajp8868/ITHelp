@model ITHelp_Models.Ticket
@section Styles {
    <link href="@Url.Content("~/Content/Approve.css")" rel="stylesheet" type="text/css" />
}
<h2>Do You Want to Approve @Html.DisplayFor(model => model.Title)?<br/>Ref: @Html.DisplayFor(model => model.Reference)</h2>
@using (Html.BeginForm("tickets/edit", "admin"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Reference)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Raised)
        @Html.HiddenFor(model => model.Status_Id)
        @Html.HiddenFor(model => model.Completed_On)
        @Html.HiddenFor(model => model.Urgency_Id)
        @Html.HiddenFor(model => model.Type_Id)
        @Html.HiddenFor(model => model.Raised_By)
        @{Model.Needs_Approval = false;}
        @Html.HiddenFor(model => model.Needs_Approval)
        @Html.HiddenFor(model => model.Approved_By)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Required_By)
        <br/>
        <div class="form-group">
            @Html.LabelFor(model => model.Required_By, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Required_By, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Approve" class="btn btn_approve" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn_back" })
</div>
